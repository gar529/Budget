<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gregrussell.budget">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/budget_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SwipeViews"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DisplayCategory"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".DisplayIncome" android:screenOrientation="portrait"></activity>
        <activity android:name=".AddBudget" android:screenOrientation="portrait"></activity>

    </application>

    <supports-screens android:smallScreens="true"

        android:normalScreens="true"

        android:largeScreens="true"

        android:xlargeScreens="true"

        android:anyDensity="true"

        android:resizeable="true"/>

</manifest>