<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipeContainerAddBudget"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@color/colorListNeutral"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/backButtonAddNewBudgetFragment"
            android:layout_weight=".5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/white_back_thin"
            android:clickable="true"
            android:paddingTop="17dp"
            android:paddingBottom="17dp"
            android:gravity="start"
            android:background="?android:attr/selectableItemBackgroundBorderless"/>
        <TextView
            android:id="@+id/titleAddNewBudgetFragment"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:typeface="normal"
            android:text="@string/create_budget"
            android:textSize="20sp"/>
    </LinearLayout>


    <FrameLayout
        android:id="@+id/content_frameAddBudget"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >


        <android.support.v4.view.ViewPager
            android:id="@+id/pagerAddBudget"
            android:layout_width="match_parent"
            android:background="@color/colorBackgroundList"
            android:layout_height="match_parent"/>




        <com.gregrussell.budget.SlidingTabLayoutAddBudget
            android:layout_gravity="bottom|center_horizontal"
            android:id="@+id/sliding_tabsAddBudget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"/>







    </FrameLayout>

</LinearLayout>