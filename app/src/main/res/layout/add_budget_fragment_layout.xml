<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/addBudgetFragmentContainer">

        <TextView
            android:id="@+id/addBudgetFragmentName"
            android:padding="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/categories_to_add"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="30dp"
            android:paddingStart="50dp"
            android:paddingEnd="50dp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/addBudgetFragmentListView"/>


            <android.support.design.widget.FloatingActionButton
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_margin="30dp"
                android:id="@+id/addBudgetFragmentCategoryButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:elevation="5dp"
                app:borderWidth="0dp"
                android:src="@drawable/add_icon_white1"
                app:rippleColor="@color/colorCirclePressed"
                app:backgroundTint="@color/colorListNeutral"
                android:layout_gravity="bottom|end"
                android:clickable="true" />

        </FrameLayout>

        <Button
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/createAddNewBudget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create"
            style="@style/button"/>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>