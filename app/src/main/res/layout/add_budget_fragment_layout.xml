<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/addBudgetFragmentContainer">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:paddingBottom="5dp"
            android:background="@color/colorListNeutral">

            <TextView
                android:id="@+id/addBudgetFragmentName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/colorLightText"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/addBudgetFragmentProjectedText"
                android:text="@string/projected_expenses"
                android:textStyle="bold"
                android:textColor="@color/colorLightText"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/addBudgetFragmentExpensesAmount"
                android:layout_marginBottom="10dp"
                android:textColor="@color/colorLightText"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/categories_to_add"
                android:textStyle="bold"
                android:textColor="@color/colorLightText"/>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@drawable/header_shadow"></RelativeLayout>
            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/addBudgetFragmentListView"/>


            <android.support.design.widget.FloatingActionButton
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/addBudgetFragmentCategoryButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:elevation="5dp"
                app:borderWidth="0dp"
                android:src="@drawable/add_icon_white1"
                app:rippleColor="@color/colorCirclePressed"
                app:backgroundTint="@color/colorListNeutral"
                android:layout_gravity="bottom|end"
                android:clickable="true" />

        </FrameLayout>

        <Button
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="60dp"
            android:id="@+id/createAddNewBudget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create"
            style="@style/button"/>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>